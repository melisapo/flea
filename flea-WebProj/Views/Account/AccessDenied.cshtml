@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="min-h-screen bg-background flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md bg-card rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.06)] overflow-hidden border border-border/50 p-8 sm:p-12">

        <div class="flex flex-col items-center justify-center text-center">
            <div class="mb-6 p-4 bg-destructive/10 rounded-2xl">
                <span class="material-symbols-outlined w-12 h-12 text-destructive grid place-items-center">
                    lock_person
                </span>
            </div>

            <h1 class="text-3xl sm:text-4xl font-bold text-foreground mb-3 tracking-tight">
                Acceso Denegado
            </h1>

            <p class="text-mutedForeground text-base mb-2">
                No tienes permisos para acceder a esta página.
            </p>

            <div class="w-full h-px bg-border/30 my-6"></div>

            <p class="text-sm text-mutedForeground mb-8">
                Si crees que deberías tener acceso, contacta al administrador.
            </p>

            <div class="w-full space-y-3">
                <a asp-controller="Home" asp-action="Index" class="flex items-center justify-center gap-2 w-full h-12 bg-primary hover:bg-primary/90 text-primaryForeground font-semibold rounded-xl transition-all duration-200 shadow-[0_1px_3px_rgba(152,207,84,0.3)] hover:shadow-[0_4px_12px_rgba(152,207,84,0.4)] hover:translate-y-[-1px] active:translate-y-[0px]">
                    <span class="material-symbols-outlined w-5 h-5">
                        home
                    </span>
                    Volver al Inicio
                </a>

                <a asp-controller="Account" asp-action="Profile" class="flex items-center justify-center gap-2 w-full h-12 bg-secondary hover:bg-secondary/80 text-secondaryForeground font-semibold rounded-xl transition-all duration-200 border border-border/50 hover:border-border">
                    <span class="material-symbols-outlined w-5 h-5">
                        person
                    </span>
                    Ir a Mi Perfil
                </a>
            </div>
        </div>
    </div>
</div>