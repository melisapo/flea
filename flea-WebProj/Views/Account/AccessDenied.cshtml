@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <i class="bi bi-shield-lock text-danger" style="font-size: 5rem;"></i>
                    <h1 class="mt-3">Acceso Denegado</h1>
                    <p class="lead text-muted">No tienes permisos para acceder a esta página.</p>
                    
                    <hr class="my-4">
                    
                    <p>Si crees que deberías tener acceso, contacta al administrador.</p>
                    
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Volver al Inicio
                        </a>
                        <a asp-action="Profile" class="btn btn-outline-secondary">
                            <i class="bi bi-person"></i> Ir a Mi Perfil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>