@model flea_WebProj.Models.ViewModels.Auth.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="flex flex-col relative overflow-hidden selection:bg-primary/30">
    <div class="flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12 z-10">
        <!-- Columna Izquierda - Formulario -->
        <div class="w-full max-w-[1000px] grid grid-cols-1 lg:grid-cols-2 bg-card rounded-3xl shadow-[0_8px_30px_rgb(0,0,0,0.06)] overflow-hidden min-h-[600px] border border-border/50">
            <div class="p-8 sm:p-12 lg:p-16 flex flex-col justify-center order-2 lg:order-1 relative">

                <!-- Título -->
                <div class="mb-8">
                    <h1 class="text-3xl sm:text-4xl font-bold text-foreground mb-2 tracking-tight">Welcome back</h1>
                    <p class="text-mutedForeground text-base sm:text-lg">Please enter your details to sign in.</p>
                </div>

                <!-- Formulario -->
                <form asp-action="Login" asp-controller="Account" method="post" class="space-y-5">
                    <div asp-validation-summary="ModelOnly" class="text-destructive text-sm bg-destructive/10 px-4 py-3 rounded-xl border border-destructive/20"></div>
                    
                    <!-- Username -->
                    <div class="flex flex-col gap-2">
                        <label asp-for="Username" class="text-sm font-semibold text-foreground">Username</label>
                        <input asp-for="Username" class="block w-full h-12 px-4 rounded-xl border-2 border-input bg-card text-foreground placeholder:text-mutedForeground/60 focus:ring-0 focus:outline-none focus:border-primary hover:border-primary/50 transition-all duration-200" placeholder="Enter your username" />
                        <span asp-validation-for="Username" class="text-destructive text-sm font-medium"></span>
                    </div>
                    
                    <!-- Password -->
                    <div class="flex flex-col gap-2">
                        <label asp-for="Password" class="text-sm font-semibold text-foreground">Password</label>
                        <input asp-for="Password" class="block w-full h-12 px-4 rounded-xl border-2 border-input bg-card text-foreground placeholder:text-mutedForeground/60 focus:ring-0 focus:outline-none focus:border-primary hover:border-primary/50 transition-all duration-200" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-destructive text-sm font-medium"></span>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex justify-end gap-1 pt-1">
                        <div class="text-sm font-medium flex items-center gap-2">
                            <input asp-for="RememberMe" class="w-4 h-4 rounded border-2 border-input text-primary focus:ring-2 focus:ring-primary/20 focus:ring-offset-0 cursor-pointer transition-colors" id="rememberMe" />
                            <label asp-for="RememberMe" class="text-foreground cursor-pointer select-none" for="rememberMe">Remember me</label>
                        </div>
                    </div>
                    
                    <!-- Submit Button -->
                    <button type="submit" class="w-full h-12 bg-primary hover:bg-primary/90 text-primaryForeground font-semibold rounded-xl transition-all duration-200 shadow-[0_1px_3px_rgba(152,207,84,0.3)] hover:shadow-[0_4px_12px_rgba(152,207,84,0.4)] hover:translate-y-[-1px] active:translate-y-[0px] mt-6">
                        Sign In
                    </button>
                </form>
                
                <!-- Sign Up Link -->
                <div class="text-center mt-8 text-sm text-mutedForeground">
                    Don't have an account? 
                    <a asp-action="Register" asp-controller="Account" class="text-primary font-semibold hover:text-primary/80 transition-colors underline-offset-4 hover:underline">Sign up now</a>
                </div>
            </div>

            <!-- Columna Derecha - Imagen/Testimonial -->
            <div class="bg-gradient-to-br from-primary/10 via-secondary to-accent/50 order-1 lg:order-2 flex items-center justify-center p-8 relative overflow-hidden">
                <div class="relative z-10 max-w-md text-center">
                    <!-- Decorative elements -->
                    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(152,207,84,0.15),transparent_50%)]"></div>
                    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_70%,rgba(152,207,84,0.1),transparent_60%)]"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
