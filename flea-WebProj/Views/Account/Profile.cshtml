@model flea_WebProj.Models.Entities.User

@{
ViewData["Title"] = "Mi Perfil";
}

<main class="flex-1 flex flex-col items-center">

    <!-- Header Image Section -->
    <div class="w-full max-w-[1440px] px-4 sm:px-6 lg:px-8">
        <div class="header-gradient relative rounded-3xl h-[160px] sm:h-[200px] w-full">

            <div class="header-pattern absolute inset-0"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-[#fbfdf1]/40 to-transparent"></div>

            <!-- Avatar -->
            <div class="absolute -bottom-10 sm:-bottom-14 left-1/2 sm:left-12 transform -translate-x-1/2 sm:translate-x-0">
                <div class="w-40 h-40 rounded-full bg-white p-1.5 shadow-soft">
                    <img src="@Model.ProfilePicture"
                         alt="Profile picture"
                         class="w-full h-full rounded-full object-cover border border-gray-100" />
                </div>
            </div>

        </div>
    </div>

    <!-- Content Grid -->
    <div class="w-full max-w-[1440px] px-4 sm:px-6 lg:px-8 pt-20 pb-2 grid grid-cols-12 gap-6 lg:gap-8">

        <!-- Left Column: Basic Info -->
        <div class="col-span-12 lg:col-span-3 flex flex-col gap-4 order-1 lg:order-none">

            <div class="bg-white p-6 sm:p-8 rounded-2xl shadow-touch">
                <div class="mb-4">
                    <h1 class="text-2xl font-extrabold text-[#25231e] leading-tight">@Model.Name</h1>
                    <p class="text-[#25231e]/50 font-medium">@@@Model.Username</p>
                </div>

                @if (Model.Roles != null && Model.Roles.Any())
                {
                <div class="flex flex-wrap gap-2 mb-3">
                    @foreach (var role in Model.Roles)
                    {
                    <span class="px-3 py-1 bg-[#98cf54]/10 text-[#98cf54] rounded-full text-xs font-bold uppercase tracking-wider">
                                @role.Name
                            </span>
                    }
                </div>
                }

                <p class="text-[#25231e]/50 text-sm leading-relaxed flex items-center gap-2">
                    <span class="material-symbols-outlined text-base">calendar_today</span>
                    Miembro desde @Model.CreatedAt.ToString("MMMM yyyy")
                </p>

                <div class="flex flex-col gap-3 mt-4">
                    <a asp-action="EditProfile"
                       class="w-full border-2 border-primary text-primary hover:bg-primary hover:text-white py-3 rounded-xl font-bold transition-all flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined text-[20px]">edit</span>
                        Editar Perfil
                    </a>
                    <a asp-action="ChangePassword"
                       class="w-full bg-[#f0f2ea] text-[#25231e]/60 hover:bg-[#e2e4db] py-3 rounded-xl font-bold transition-all flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined text-[20px]">lock</span>
                        Cambiar Contraseña
                    </a>
                </div>
            </div>

            <div class="bg-[#25231e] p-6 sm:p-8 rounded-2xl text-white shadow-touch relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10">
                    <span class="material-symbols-outlined text-[80px]">auto_graph</span>
                </div>

                <h3 class="text-[#98cf54] font-bold text-xs uppercase tracking-widest mb-4">
                    Mis Publicaciones
                </h3>

                @if (Model.Posts != null && Model.Posts.Any())
                {
                <div class="flex flex-col gap-1">
                    <span class="text-6xl font-black leading-none">@Model.Posts.Count</span>
                    <span class="text-white/50 font-medium">Publicaciones</span>
                </div>
                <a asp-controller="Posts"
                   asp-action="MyPosts"
                   class="mt-4 flex items-center gap-2 text-[#98cf54] font-bold group">
                    <span>Ver todas</span>
                    <span class="material-symbols-outlined text-[18px] group-hover:translate-x-1 transition-transform">
                            arrow_right_alt
                        </span>
                </a>
                }
                else
                {
                <div class="flex flex-col gap-1">
                    <span class="text-6xl font-black leading-none">0</span>
                    <span class="text-white/50 font-medium">Publicaciones</span>
                </div>
                <a asp-controller="Posts"
                   asp-action="Create"
                   class="mt-4 flex items-center gap-2 text-[#98cf54] font-bold group">
                    <span>Crear primera</span>
                    <span class="material-symbols-outlined text-[18px] group-hover:translate-x-1 transition-transform">
                            arrow_right_alt
                        </span>
                </a>
                }
            </div>

        </div>

        <!-- Center Column -->
        <div class="col-span-12 lg:col-span-6 flex flex-col gap-4 order-2 lg:order-none">

            <div class="bg-white p-6 sm:p-10 rounded-2xl shadow-touch">
                <div class="flex items-center gap-4 mb-4">
                    <div class="bg-[#98cf54]/20 p-3 rounded-xl grid place-items-center">
                        <span class="material-symbols-outlined text-[#98cf54] font-bold">contact_mail</span>
                    </div>
                    <h2 class="text-xl font-bold">Información de Contacto</h2>
                </div>

                @if (Model.Contact != null)
                {
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold tracking-widest text-[#25231e]/30">Email</span>
                        <div class="flex items-center gap-2">
                            <span class="text-[#25231e]/80 font-semibold">@Model.Contact.Email</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Contact.PhoneNumber))
                    {
                    <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold tracking-widest text-[#25231e]/30">Teléfono</span>
                        <span class="text-[#25231e]/80 font-semibold">@Model.Contact.PhoneNumber</span>
                    </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Contact.TelegramUser))
                    {
                    <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold tracking-widest text-[#25231e]/30">Telegram</span>
                        <span class="text-[#25231e]/80 font-semibold">@@@Model.Contact.TelegramUser</span>
                    </div>
                    }
                </div>
                }
                else
                {
                <p class="text-[#25231e]/50">No hay información de contacto disponible.</p>
                }
            </div>

            @if (Model.Address != null)
            {
            <div class="bg-white p-6 sm:p-10 rounded-2xl shadow-touch">
                <div class="flex items-center gap-4 mb-4">
                    <div class="bg-[#98cf54]/20 p-3 rounded-xl grid place-items-center">
                        <span class="material-symbols-outlined text-[#98cf54] font-bold">location_on</span>
                    </div>
                    <h2 class="text-xl font-bold">Dirección</h2>
                </div>

                <div class="flex flex-col gap-6">
                    <div class="p-6 bg-[#fbfdf1] border border-[#98cf54]/20 rounded-2xl flex items-start justify-between">
                        <div class="flex gap-4">
                            <span class="material-symbols-outlined text-[#98cf54] mt-1">home</span>
                            <div>
                                <p class="font-bold text-[#25231e]">Dirección Principal</p>
                                <p class="text-sm text-[#25231e]/60 mt-1">
                                    @if (!string.IsNullOrEmpty(Model.Address.City))
                                    {
                                    <text>@Model.Address.City<br /></text>
                                    }
                                    @Model.Address.StateProvince, @Model.Address.Country
                                </p>
                            </div>
                        </div>
                        <span class="bg-[#98cf54]/10 text-[#98cf54] px-3 py-1 rounded-full text-[10px] font-bold uppercase">
                                Principal
                            </span>
                    </div>
                </div>
            </div>
            }

        </div>

        <!-- Right Column -->
        <div class="col-span-12 lg:col-span-3 flex flex-col order-3 lg:order-none">

            <div class="bg-white p-6 sm:p-8 rounded-2xl shadow-touch border-t-4 border-[#98cf54]">
                <h3 class="font-bold text-lg mb-4">Acciones Rápidas</h3>
                <p class="text-[#25231e]/50 text-sm mb-8 leading-relaxed">
                    Gestiona tus publicaciones y perfil desde aquí.
                </p>

                <div class="flex flex-col gap-4">
                    <a asp-controller="Posts"
                       asp-action="Create"
                       class="flex items-center gap-3 p-4 bg-[#fbfdf1] rounded-xl hover:border-[#98cf54]/50 border border-transparent transition-all group">
                        <div class="w-10 h-10 rounded-full bg-[#98cf54]/20 flex items-center justify-center text-[#98cf54] group-hover:bg-[#98cf54] group-hover:text-white transition-all">
                            <span class="material-symbols-outlined">add_circle</span>
                        </div>
                        <span class="font-bold text-sm">Nueva Publicación</span>
                    </a>

                    <a asp-controller="Posts"
                       asp-action="MyPosts"
                       class="flex items-center gap-3 p-4 bg-[#fbfdf1] rounded-xl hover:border-[#98cf54]/50 border border-transparent transition-all group">
                        <div class="w-10 h-10 rounded-full bg-[#98cf54]/20 flex items-center justify-center text-[#98cf54] group-hover:bg-[#98cf54] group-hover:text-white transition-all">
                            <span class="material-symbols-outlined">inventory_2</span>
                        </div>
                        <span class="font-bold text-sm">Mis Publicaciones</span>
                    </a>
                </div>

                <a asp-action="EditProfile"
                   class="w-full mt-8 bg-[#98cf54] text-white py-4 rounded-xl font-bold shadow-lg shadow-[#98cf54]/20 transition-all flex items-center justify-center">
                    Editar Mi Perfil
                </a>
            </div>

        </div>

    </div>
</main>

<style>
    .header-gradient {
        background: linear-gradient(135deg, #eef7e2 0%, #fbfdf1 100%);
        position: relative;
    }

    .header-pattern {
        opacity: 0.6;
        background-image: radial-gradient(#98cf54 0.5px, transparent 0.5px);
        background-size: 24px 24px;
    }

    .shadow-soft {
        box-shadow: 0 10px 40px -10px rgba(152, 207, 84, 0.12);
    }

    .shadow-touch {
        box-shadow: 0 20px 50px -12px rgba(37, 35, 30, 0.05);
    }
</style>
