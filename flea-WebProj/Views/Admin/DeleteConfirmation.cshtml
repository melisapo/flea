@model flea_WebProj.Models.ViewModels.Admin.DeleteConfirmationViewModel

@{
    ViewData["Title"] = $"Eliminar {Model.ItemType}";
}

<div class="flex">
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content Area -->
    <main class="flex-1">
        <!-- Confirmation Card -->
        <div class="max-w-xl mx-auto">
            <div class="bg-card border border-destructive/40 rounded-2xl overflow-hidden shadow-lg">
                <!-- Header -->
                <div class="bg-destructive text-white p-8">
                    <div class="flex items-center gap-4">
                        <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
                            <span class="material-symbols-outlined text-4xl">warning</span>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold mb-1">Confirmar Eliminación</h2>
                            <p class="text-white/80 text-sm">Esta acción no se puede deshacer</p>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="p-8">
                    <div class="mb-4">
                        <p class="text-lg mb-3">
                            ¿Estás seguro de que deseas eliminar 
                            <span class="font-bold">@Model.ItemType</span>:
                        </p>
                        <div class="bg-destructive/10 border border-destructive/60 rounded-xl p-4">
                            <p class="text-xl font-bold text-destructive text-center">
                                "@Model.ItemName"
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.WarningMessage))
                    {
                        <div class="mb-4 p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-900/50 rounded-xl">
                            <div class="flex items-start gap-3">
                                <span class="material-symbols-outlined text-yellow-600 dark:text-yellow-400 mt-0.5">info</span>
                                <div>
                                    <p class="font-semibold text-yellow-800 dark:text-yellow-300 mb-1">Advertencia</p>
                                    <p class="text-sm text-yellow-700 dark:text-yellow-400">@Model.WarningMessage</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="mb-4 p-4 bg-gray-50 border border-gray-200 rounded-xl">
                        <h4 class="font-bold mb-2 flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg">shield</span>
                            Consecuencias de esta acción:
                        </h4>
                        <ul class="space-y-2 text-sm text-mutedForeground">
                            <li class="flex items-start gap-2">
                                <span class="material-symbols-outlined text-destructive text-base mt-0.5">close</span>
                                <span>Los datos se eliminarán permanentemente de la base de datos</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="material-symbols-outlined text-destructive text-base mt-0.5">close</span>
                                <span>No podrás recuperar esta información después</span>
                            </li>
                            @if (Model.ItemType.ToLower() == "categoría")
                            {
                                <li class="flex items-start gap-2">
                                    <span class="material-symbols-outlined text-destructive text-base mt-0.5">close</span>
                                    <span>A los productos asociados se les asignará la categoría "Otros"</span>
                                </li>
                            }
                            @if (Model.ItemType.ToLower() == "usuario")
                            {
                                <li class="flex items-start gap-2">
                                    <span class="material-symbols-outlined text-destructive text-base mt-0.5">close</span>
                                    <span>Se eliminarán todas las publicaciones del usuario</span>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex sm:flex-row gap-3">
                        <a href="@Model.ReturnUrl" 
                           class="flex-1 px-4 py-4 rounded-xl border-2 border-[#dce3d3] font-bold text-center hover:bg-gray-50 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">arrow_back</span>
                            Cancelar y Volver
                        </a>

                        <form asp-action="@GetDeleteAction()" 
                              asp-route-id="@Model.ItemId" 
                              method="post" 
                              class="flex-1">
                            @Html.AntiForgeryToken()
                            <button type="submit" 
                                    class="w-full px-6 py-4 rounded-xl bg-destructive text-white font-bold hover:bg-destructive/85 transition-all shadow-md shadow-destructive/25 flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined">delete_forever</span>
                                Eliminar @Model.ItemType
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Footer -->
                <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
                    <p class="text-xs text-mutedForeground text-center flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined text-sm">lock</span>
                        Acción protegida - Requiere confirmación administrativa
                    </p>
                </div>
            </div>
        </div>
    </main>
</div>

@functions {
    private string GetDeleteAction()
    {
        return Model.ItemType.ToLower() switch
        {
            "categoría" => "DeleteCategory",
            "usuario" => "DeleteUser",
            "post" => "DeletePost",
            _ => "Delete"
        };
    }
}