@model flea_WebProj.Models.ViewModels.Admin.DeleteConfirmationViewModel

@{
    ViewData["Title"] = $"Eliminar {Model.ItemType}";
}

<div class="flex">
    <!-- Sidebar -->
    @await Html.PartialAsync("_AdminSidebar")

    <!-- Main Content Area -->
    <main class="flex-1 p-8">
        <!-- Breadcrumbs -->
        <nav class="flex items-center gap-2 text-sm text-muted mb-8">
            <span class="hover:text-primary cursor-pointer">Admin Panel</span>
            <span class="material-symbols-outlined text-xs">chevron_right</span>
            <a href="@Model.ReturnUrl" class="hover:text-primary">Volver</a>
            <span class="material-symbols-outlined text-xs">chevron_right</span>
            <span class="text-text-main dark:text-white font-medium">Confirmar Eliminación</span>
        </nav>

        <!-- Confirmation Card -->
        <div class="max-w-2xl mx-auto">
            <div class="bg-white dark:bg-background-dark border border-red-200 dark:border-red-900/50 rounded-2xl overflow-hidden shadow-xl">
                <!-- Header -->
                <div class="bg-red-500 text-white p-8">
                    <div class="flex items-center gap-4">
                        <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
                            <span class="material-symbols-outlined text-4xl">warning</span>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold mb-1">Confirmar Eliminación</h2>
                            <p class="text-red-100 text-sm">Esta acción no se puede deshacer</p>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="p-8">
                    <div class="mb-6">
                        <p class="text-text-main dark:text-white text-lg mb-4">
                            ¿Estás seguro de que deseas eliminar 
                            <span class="font-bold">@Model.ItemType</span>:
                        </p>
                        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-900/50 rounded-xl p-4">
                            <p class="text-xl font-bold text-red-600 dark:text-red-400 text-center">
                                "@Model.ItemName"
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.WarningMessage))
                    {
                        <div class="mb-6 p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-900/50 rounded-xl">
                            <div class="flex items-start gap-3">
                                <span class="material-symbols-outlined text-yellow-600 dark:text-yellow-400 mt-0.5">info</span>
                                <div>
                                    <p class="font-semibold text-yellow-800 dark:text-yellow-300 mb-1">Advertencia</p>
                                    <p class="text-sm text-yellow-700 dark:text-yellow-400">@Model.WarningMessage</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-xl">
                        <h4 class="font-bold text-text-main dark:text-white mb-2 flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg">shield</span>
                            Consecuencias de esta acción:
                        </h4>
                        <ul class="space-y-2 text-sm text-muted">
                            <li class="flex items-start gap-2">
                                <span class="material-symbols-outlined text-red-500 text-base mt-0.5">close</span>
                                <span>Los datos se eliminarán permanentemente de la base de datos</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="material-symbols-outlined text-red-500 text-base mt-0.5">close</span>
                                <span>No podrás recuperar esta información después</span>
                            </li>
                            @if (Model.ItemType.ToLower() == "categoría")
                            {
                                <li class="flex items-start gap-2">
                                    <span class="material-symbols-outlined text-red-500 text-base mt-0.5">close</span>
                                    <span>Los productos asociados quedarán sin categoría</span>
                                </li>
                            }
                            @if (Model.ItemType.ToLower() == "usuario")
                            {
                                <li class="flex items-start gap-2">
                                    <span class="material-symbols-outlined text-red-500 text-base mt-0.5">close</span>
                                    <span>Se eliminarán todas las publicaciones del usuario</span>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-3">
                        <a href="@Model.ReturnUrl" 
                           class="flex-1 px-6 py-4 rounded-xl border-2 border-[#dce3d3] dark:border-[#333] text-text-main dark:text-white font-bold text-center hover:bg-gray-50 dark:hover:bg-gray-800 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">arrow_back</span>
                            Cancelar y Volver
                        </a>

                        <form asp-action="@GetDeleteAction()" 
                              asp-route-id="@Model.ItemId" 
                              method="post" 
                              class="flex-1">
                            @Html.AntiForgeryToken()
                            <button type="submit" 
                                    class="w-full px-6 py-4 rounded-xl bg-red-500 text-white font-bold hover:bg-red-600 transition-all shadow-lg shadow-red-500/30 flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined">delete_forever</span>
                                Sí, Eliminar @Model.ItemType.ToUpper()
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Footer -->
                <div class="bg-gray-50 dark:bg-gray-900/50 px-8 py-4 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-xs text-muted text-center flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined text-sm">lock</span>
                        Acción protegida - Requiere confirmación administrativa
                    </p>
                </div>
            </div>
        </div>
    </main>
</div>

@functions {
    private string GetDeleteAction()
    {
        return Model.ItemType.ToLower() switch
        {
            "categoría" => "DeleteCategory",
            "usuario" => "DeleteUser",
            "post" => "DeletePost",
            _ => "Delete"
        };
    }
}