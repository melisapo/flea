@model flea_WebProj.Models.ViewModels.Admin.UserListViewModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Gestión de Usuarios</h1>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Dashboard
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Posts</th>
                            <th>Roles</th>
                            <th>Fecha Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <img src="@user.ProfilePic" alt="@user.Username" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        <strong>@user.Username</strong>
                                    </td>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                    <td><span class="badge bg-info">@user.PostCount</span></td>
                                    <td>
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-secondary me-1">@role</span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="UserDetails" asp-route-id="@user.UserId" class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ManageUserRoles" asp-route-userId="@user.UserId" class="btn btn-sm btn-warning" title="Gestionar roles">
                                                <i class="bi bi-shield"></i>
                                            </a>
                                            <a asp-action="DeleteUserConfirm" asp-route-id="@user.UserId" class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">No hay usuarios registrados</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
