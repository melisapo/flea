@model dynamic

@{
    ViewData["Title"] = "Página no encontrada";
}

<div>
<!-- Ambient Floating Shapes -->
<div class="fixed inset-0 pointer-events-none overflow-hidden z-0">
    <div class="absolute top-[10%] left-[15%] w-64 h-64 bg-primary rounded-full glow-shape"></div>
    <div class="absolute bottom-[20%] right-[10%] w-80 h-80 bg-primary rounded-full glow-shape"></div>
    <div class="absolute top-[60%] left-[5%] w-32 h-32 bg-primary rounded-full glow-shape opacity-20"></div>
</div>

<!-- Main Content Area -->
<main class="flex-1 flex items-center justify-center p-6">
    <div class="max-w-[800px] w-full flex flex-col items-center">
        <!-- Glassmorphism 404 Visual -->
        <div class="relative group mb-8">
            <div class="absolute -inset-4 bg-primary/20 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition duration-500"></div>
            <div class="glass-effect relative flex items-center justify-center rounded-3xl py-8 px-16 shadow-2xl">
                <span class="text-[120px] md:text-[180px] font-extrabold tracking-tighter text-transparent bg-clip-text bg-gradient-to-b from-[#25231e] to-[#25231e]/50 select-none">
                            404
                        </span>
                <!-- Abstract Glass Overlay Decoration -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-primary/30 rounded-full backdrop-blur-sm border border-white/20"></div>
                <div class="absolute -bottom-2 -left-6 w-8 h-8 bg-white/20 rounded-lg backdrop-blur-md border border-white/10 rotate-12"></div>
            </div>
        </div>
        <!-- HeadlineText & Content Card -->
        <div class="text-center space-y-4 max-w-xl mx-auto">
            <h1 class="text-accent-dark dark:text-white text-4xl md:text-5xl font-extrabold tracking-tight">
                        ¡Vaya! Te has perdido
                    </h1>
            <p class="text-slate-600 dark:text-slate-400 text-lg leading-relaxed px-4">
                        La página que buscas no existe o ha sido movida a una nueva ubicación. 
                        No te preocupes, estamos aquí para ayudarte a volver al camino correcto.
                    </p>
        <!-- Navigation Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8">
            <a asp-action="Index" asp-controller="Home" class="w-full sm:w-auto flex min-w-[200px] cursor-pointer items-center justify-center rounded-xl h-14 px-8 bg-primary text-accent-dark text-base font-bold shadow-xl shadow-primary/30 hover:shadow-primary/50 hover:-translate-y-0.5 transition-all active:scale-95">
                <span class="material-symbols-outlined mr-2">home</span>
                Volver al Inicio
                </a>
        </div>
    </div>
    </div>
</main>
</div>
<style>
        .glass-effect {
            background: rgba(255, 255, 255, 0.4);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        .dark .glass-effect {
            background: rgba(23, 26, 28, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .glow-shape {
            filter: blur(60px);
            opacity: 0.4;
        }
    </style>