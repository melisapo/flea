@model flea_WebProj.Models.ViewModels.Product.SearchPostViewModel

@{
    ViewData["Title"] = "Inicio";
    var isAuth = ViewBag.IsAuthenticated as bool? ?? false;
}

<!-- Banner principal -->
<div class="bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4">flea</h1>
                <p class="lead lato-regular">Compra y vende productos de segunda mano en tu comunidad</p>
            </div>
            <div class="col-md-4 text-end">
                    <a asp-controller="Posts" asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-plus-circle"></i> Publicar Producto
                    </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filtros de búsqueda -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <!-- Búsqueda por texto -->
                    <div class="col-md-4">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Buscar productos..." value="@Model.SearchTerm">
                    </div>
                    
                    <!-- Categoría -->
                    <div class="col-md-3">
                        <select name="categoryId" class="form-select">
                            <option value="">Todas las categorías</option>
                            @if (Model.AvailableCategories != null)
                            {
                                foreach (var category in Model.AvailableCategories)
                                {
                                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                    
                    <!-- Precio mínimo -->
                    <div class="col-md-2">
                        <input type="number" name="minPrice" class="form-control" placeholder="Precio mín" step="0.01" value="@Model.MinPrice">
                    </div>
                    
                    <!-- Precio máximo -->
                    <div class="col-md-2">
                        <input type="number" name="maxPrice" class="form-control" placeholder="Precio máx" step="0.01" value="@Model.MaxPrice">
                    </div>
                    
                    <!-- Botón buscar -->
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Limpiar filtros -->
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.CategoryId.HasValue || Model.MinPrice.HasValue || Model.MaxPrice.HasValue)
                {
                    <div class="mt-2">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar filtros
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>
    
    <!-- Resultados -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>
            @if (Model.TotalResults > 0)
            {
                <span>@Model.TotalResults producto(s) encontrado(s)</span>
            }
            else
            {
                <span>Productos recientes</span>
            }
        </h4>
    </div>
    
    @if (!Model.Results.Any())
    {
        <!-- Sin resultados -->
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
            <h4 class="mt-3">No se encontraron productos</h4>
            <p class="text-muted">Intenta con otros filtros o crea una nueva publicación</p>
            @if (isAuth)
            {
                <a asp-controller="Posts" asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Crear Publicación
                </a>
            }
        </div>
    }
    else
    {
        <!-- Grid de productos -->
        <div class="row">
            @foreach (var post in Model.Results)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.PostId" class="text-decoration-none text-dark">
                            <img src="@post.MainImage" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title mb-0">@post.Title</h6>
                                    <span class="badge @(post.Status == flea_WebProj.Models.Enums.ProductStatus.Available ? "bg-success" : "bg-secondary") ms-2">
                                        @post.StatusText
                                    </span>
                                </div>
                                <p class="card-text text-muted small">
                                    @(post.Description.Length > 80 ? post.Description[..80] + "..." : post.Description)
                                </p>
                                <h5 class="text-primary mb-2">$@post.Price.ToString("N2")</h5>
                                <div class="d-flex align-items-center">
                                    <img src="@post.AuthorProfilePic" alt="@post.AuthorUsername" class="rounded-circle me-2" style="width: 25px; height: 25px; object-fit: cover;">
                                    <small class="text-muted">@@@post.AuthorUsername</small>
                                </div>
                            </div>
                        </a>
                        <div class="card-footer bg-white border-0 pt-0">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> @post.CreatedAt.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <!-- Paginación -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    <!-- Anterior -->
                    <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-status="@Model.Status"
                           asp-route-page="@(Model.Page - 1)">
                            Anterior
                        </a>
                    </li>
                    
                    <!-- Páginas -->
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Page == i ? "active" : "")">

                            @{
                                var i1 = i;
                            }
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-categoryId="@Model.CategoryId"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-status="@Model.Status"
                               asp-route-page="@i1">
                                @i1
                            </a>
                        </li>
                    }
                    
                    <!-- Siguiente -->
                    <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-status="@Model.Status"
                           asp-route-page="@(Model.Page + 1)">
                            Siguiente
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
