@model flea_WebProj.Models.ViewModels.Product.SearchPostViewModel

@{
    ViewData["Title"] = "Inicio";
    var isAuth = ViewBag.IsAuthenticated as bool? ?? false;
}

<!-- Banner principal -->
<div class="bg-primary text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4"><i class="bi bi-shop"></i> Flea Marketplace</h1>
                <p class="lead">Compra y vende productos de segunda mano en tu comunidad</p>
            </div>
            <div class="col-md-4 text-end">
                @if (isAuth)
                {
                    <a asp-controller="Posts" asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-plus-circle"></i> Publicar Producto
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
                        <i class="bi bi-person-plus"></i> Registrarse
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h4>@Model.TotalResults producto(s) encontrado(s)</h4>
    
    @if (Model.Results.Any())
    {
        <div class="row">
            @foreach (var post in Model.Results)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@post.MainImage" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6>@post.Title</h6>
                            <h5 class="text-primary">$@post.Price.ToString("N2")</h5>
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.PostId" class="btn btn-sm btn-primary">Ver</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No hay posts</p>
    }
</div>