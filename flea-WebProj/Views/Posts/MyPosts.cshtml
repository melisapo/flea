@model List<flea_WebProj.Models.ViewModels.Product.PostCardViewModel>

@{
    ViewData["Title"] = "Mis Publicaciones";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-card-list"></i> Mis Publicaciones</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nueva Publicación
        </a>
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
            <h4 class="mt-3">No tienes publicaciones aún</h4>
            <p class="text-muted">Crea tu primera publicación y empieza a vender</p>
            <a asp-action="Create" class="btn btn-success mt-3">
                <i class="bi bi-plus-circle"></i> Crear Publicación
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@post.MainImage" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@post.Title</h5>
                                <span class="badge @(post.Status == flea_WebProj.Models.Enums.ProductStatus.Available ? "bg-success" : "bg-secondary")">
                                    @post.StatusText
                                </span>
                            </div>
                            <p class="card-text text-muted small">@post.Description</p>
                            <h4 class="text-primary mb-3">$@post.Price.ToString("N2")</h4>
                            <small class="text-muted">Publicado el @post.CreatedAt.ToString("dd/MM/yyyy")</small>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@post.PostId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Ver Detalle
                                </a>
                                <a asp-action="Edit" asp-route-id="@post.PostId" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>