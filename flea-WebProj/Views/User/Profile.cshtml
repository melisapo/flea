@model flea_WebProj.Models.ViewModels.Auth.UserProfileViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="max-w-[1140px] mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <div class="grid grid-cols-12 gap-6 lg:gap-10">

        <!-- SIDEBAR -->
        <div class="col-span-12 lg:col-span-4">
            <div class="bg-white rounded-2xl card-shadow border border-[#e5e9d8] overflow-hidden lg:sticky lg:top-28">
                <div class="h-2 bg-primary"></div>

                <div class="p-8 flex flex-col items-center text-center">
                    <div class="relative mb-6">
                        <img src="@Model.ProfilePic"
                             alt="@Model.Name"
                             class="w-28 h-28 rounded-full object-cover ring-background-light" />
                    </div>

                    <h4 class="text-2xl font-bold tracking-tight text-text-main">
                        @Model.Name
                    </h4>

                    <p class="text-text-sub text-sm mt-1">
                        @@@Model.Username
                    </p>

                    <p class="mt-3 flex items-center gap-1.5 text-xs font-medium text-text-sub/70">
                        <span class="material-symbols-outlined text-base">calendar_today</span>
                        Miembro desde @Model.MemberSince.ToString("MMMM yyyy")
                    </p>
                    <!-- Stats -->
                    <div class="mt-6 pt-6 border-t border-[#f0f4e4] w-full flex justify-center">
                        <div class="grid place-items-center">
                            <div class="text-3xl sm:text-4xl font-bold text-text-main">
                                @Model.TotalPosts
                            </div>
                            <p class="text-text-sub text-sm font-medium">
                                Publicaciones
                            </p>
                        </div>
                    </div>

                    <!-- Contacto -->
                    <div class="w-full mt-6 pt-6 border-t border-[#f0f4e4]
                                grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1
                                gap-3 text-sm text-text-main">

                        <div class="flex items-center gap-2 justify-center sm:justify-start break-all">
                            <span class="material-symbols-outlined text-base text-primary">mail</span>
                            <a href="mailto:@Model.Email" class="text-sm relative relative after:content-[''] after:absolute after:left-0 after:bottom-[-0.25rem] after:h-0.5 after:w-0 after:bg-primary after:transition-all after:duration-200 hover:after:w-full">
                                @Model.Email
                            </a>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <div class="flex items-center gap-2 justify-center sm:justify-start">
                                <span class="material-symbols-outlined text-base text-primary">call</span>
                                @Model.PhoneNumber
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.TelegramUser))
                        {
                            <div class="flex items-center gap-2 justify-center sm:justify-start">
                                <span class="material-symbols-outlined text-base text-primary">send</span>
                                @@@Model.TelegramUser
                            </div>
                        }
                    </div>

                    <!-- Dirección -->
                    @if (!string.IsNullOrEmpty(Model.StateProvince))
                    {
                        <div class="w-full mt-4 pt-2 border-t border-[#f0f4e4]">
                            <div class="grid place-items-center rounded-xl">
                                <div class="w-12 h-12 rounded-full flex items-center justify-center text-primary">
                                    <span class="material-symbols-outlined text-2xl font-bold">location_on</span>
                                </div>
                                <div class="grid place-items-center">
                                    <p class="text-text-main font-bold text-lg">
                                        @Model.City
                                    </p>
                                    <p class="text-text-sub font-semibold text-sm">
                                        @Model.StateProvince, @Model.Country
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- PUBLICACIONES -->
        <div class="col-span-12 lg:col-span-8">
            <div class="bg-white rounded-2xl card-shadow border border-[#e5e9d8] overflow-hidden">
                <div class="h-2 bg-primary"></div>
                <div class="px-6 sm:px-8 py-5 border-b border-[#f0f4e4] flex items-center gap-3">
                    <h5 class="text-text-main font-bold text-base sm:text-lg">
                        Publicaciones de @Model.Username
                    </h5>
                </div>

                <div class="p-6 sm:p-8">

                    @if (!Model.RecentPosts.Any())
                    {
                        <div class="flex flex-col items-center text-center py-12">
                            <span class="material-symbols-outlined text-5xl text-text-sub mb-4">
                                inbox
                            </span>
                            <p class="text-text-sub text-sm sm:text-base">
                                Este usuario no tiene publicaciones aún
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                            @foreach (var post in Model.RecentPosts)
                            {
                                <div class="bg-white rounded-xl border border-[#e5e9d8] overflow-hidden hover:shadow-md transition-all">
                                    <a asp-controller="Posts"
                                       asp-action="Details"
                                       asp-route-id="@post.PostId"
                                       class="block text-text-main no-underline">

                                        <img src="@post.MainImage"
                                             alt="@post.Title"
                                             class="w-full h-40 sm:h-44 object-cover" />

                                        <div class="p-4 sm:p-5 space-y-2">
                                            <h6 class="font-bold text-base">
                                                @post.Title
                                            </h6>

                                            <p class="text-text-sub text-sm">
                                                @(post.Description.Length > 60
                                                    ? post.Description[..60] + "..."
                                                    : post.Description)
                                            </p>

                                            <div class="flex items-center justify-between pt-2">
                                                <span class="font-bold text-primary text-lg">
                                                    $@post.Price.ToString("N2")
                                                </span>

                                                <span class="text-xs text-text-sub flex items-center gap-1">
                                                    <span class="material-symbols-outlined text-sm">
                                                        schedule
                                                    </span>
                                                    @post.CreatedAt.ToString("dd/MM/yyyy")
                                                </span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        @if (Model.TotalPosts > 12)
                        {
                            <div class="text-center mt-6 text-text-sub text-sm">
                                Mostrando @Model.RecentPosts.Count de @Model.TotalPosts publicaciones
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

    </div>
</div>
